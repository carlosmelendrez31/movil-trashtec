<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Trash_TecMovil.View.Principal"
             Title="Principal">
    <StackLayout Padding="20" Spacing="20">

        <Label x:Name="NombreUsuarioLabel"
       FontSize="18"
       FontAttributes="Bold"
       TextColor="Purple"
       IsVisible="False"
       Margin="10"/>

        <Entry x:Name="NombreBote" Placeholder="Nombre del Bote" />
        <Entry x:Name="TipoBote" Placeholder="Tipo del Bote" />

        <Button Text="Agregar Bote" Clicked="OnAgregarBoteClicked" />

        <Label x:Name="NombreLabel" FontSize="18" TextColor="Black" IsVisible="False" />

        <Label x:Name="LlenadoLabel" Text="Llenado: 0%" FontSize="24" HorizontalOptions="Center" IsVisible="False" />

        <BoxView x:Name="SemaforoBox"
                 WidthRequest="100"
                 HeightRequest="100"
                 CornerRadius="50"
                 Color="Gray"
                 HorizontalOptions="Center"
                 IsVisible="False" />
    </StackLayout>
</ContentPage>