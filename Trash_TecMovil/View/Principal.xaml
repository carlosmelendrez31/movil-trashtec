<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Trash_TecMovil.View.Principal"
             Title="Principal">
    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="25">

            <!-- Título -->
            <Label Text="Agregar Bote" 
                   FontSize="32"
                   FontAttributes="Bold"
                   HorizontalOptions="Center" />

            <!-- Botón para agregar nombre y tipo del bote -->
            <Button Text="Agregar Bote"
                    Clicked="Button_Clicked"
                    BackgroundColor="#6200EE"
                    TextColor="White"/>

            <!-- Botón para obtener llenado -->
            <Button Text="Obtener Llenado"
                    Clicked="ObtenerLlenado_Clicked"
                    BackgroundColor="#03DAC5"
                    TextColor="Black"/>

            <!-- Etiqueta del porcentaje -->
            <Label x:Name="lblPorcentaje"
                   Text="--%"
                   FontSize="48"
                   FontAttributes="Bold"
                   HorizontalOptions="Center"/>

            <!-- Semáforo visual -->
            <BoxView x:Name="semaforo"
                     HeightRequest="150"
                     WidthRequest="150"
                     CornerRadius="75"
                     Color="Gray"
                     HorizontalOptions="Center"
                     VerticalOptions="Center"/>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>