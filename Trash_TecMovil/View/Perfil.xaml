<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="Trash_TecMovil.View.Perfil"
             Title="Perfil">
    <ScrollView>
        <VerticalStackLayout Padding="30" Spacing="25" HorizontalOptions="Center">

            <Image Source="perfil.png"
                   HeightRequest="120"
                   WidthRequest="120"
                   HorizontalOptions="Center"
                   Margin="0,30,0,0" />

            <Label x:Name="NombreLabel"
                   Text="Nombre del usuario"
                   FontSize="24"
                   FontAttributes="Bold"
                   TextColor="#6A1B9A"
                   HorizontalOptions="Center" />

            <Label Text="Bienvenido a tu perfil personal."
                   FontSize="16"
                   TextColor="Gray"
                   HorizontalOptions="Center" />

            <Frame BackgroundColor="White"
                   CornerRadius="12"
                   Padding="15"
                   HasShadow="True"
                   Margin="0,30,0,0">
                <VerticalStackLayout Spacing="10">
                    <Label Text="Correo:"
                           FontSize="14"
                           TextColor="#6A1B9A"
                           FontAttributes="Bold"/>
                    <Label x:Name="CorreoLabel"
                           Text="correo@ejemplo.com"
                           FontSize="14"
                           TextColor="Black" />
                </VerticalStackLayout>
            </Frame>

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>